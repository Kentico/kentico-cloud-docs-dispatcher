{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "await-promise": true,
    "deprecation": true,
    "no-floating-promises": true,
    "no-string-throw": false,
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": false,
    "semicolon": true,
    "strict-type-predicates": true,
    "quotemark": [
      true, "single"
    ]
  }
}
